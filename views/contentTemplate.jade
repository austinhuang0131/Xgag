script#contentTmpl(type="text/x-jquery-tmpl")
  .post.jumbotron(id="${_id}")
    .post-header
      .item-title
        h3.badge-evt.badge-track(href="#") ${title}
    .post-body
      a.badge-evt.badge-track.badge-track-no-follow(href="#")
        .col-md-4
          img.badge-item-img.col-md-12(src='${image}' style="height:200px;")
        .col-md-8
          h3.text-info.new-title.badge-evt.badge-track(href="#") ${newsTitle}
          p.text-muted.text-left.badge-evt.badge-track(href="#") ${content}...
      .clearfix
    .post-footer
      div.progress
        div.progress-like.progress-bar.progress-bar-info(style="width: ${percent.like}%")
        div.progress-dislike.progress-bar.progress-bar-danger(style="width: ${percent.dislike}%")
      div.media
        div.pull-left
          a(href="/like/add/${_id}").btn.btn-default.btn-lg.motion.btn-primary
            span.like ${like.length}
            | 讚 ·
            i.fa.fa-thumbs-o-up

        div.pull-right
          a(href="/dislike/add/${_id}").btn.btn-default.btn-lg.motion.btn-danger
            span.dislike ${dislike.length}
            | 幹  ·
            i.fa.fa-thumbs-down

      div.comment
        button.btn.btn-default.btn-lg.comment-btn
          i.fa.fa-comment-o

    p.comment-info.bg-danger 共 ${$item.count} 則回應
    .comment-box
