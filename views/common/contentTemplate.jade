                a.btn.social-sharing.share-facebook(onclick="")
                  i.fa.fa-facebook
                  span.hidden-xs.hidden-sm 分享至Facebook
                  span.visible-xs-inline.visible-sm-inline 分享
                a.btn.social-sharing.share-twitter(onclick="")
                  i.fa.fa-twitter
                  span.hidden-xs.hidden-sm
                    | 分享至Twitter
                  span.visible-xs-inline.visible-sm-inline
                    | 推特
              .content-footer-meta
                .post-vote-header
                  a.btn.btn-default.post-vote.post-vote-up(href="#vote-up" title="Like")
                    i.fa.fa-thumbs-o-up
                  span.vote-count
                    | 209
                  a.btn.btn-default.post-vote.post-vote-down(href="#vote-down" title="Dislike")
