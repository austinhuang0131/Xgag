body {
  padding: 20px 0 0;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}

.gag-nav {
  .navbar-nav {
    & > li {
      margin: 0 5px;
      & > .tab {
        border-bottom: 3px solid transparent;
      }
      & > a {
        &.tab {
          &:focus {
            border-color: #fff;
          }
        }
      }
    }
  }
}

.user-info {
  margin-bottom: 20px;
}

.jumbotron {
  &.user-info {
    text-align: center;
    color: #cdbfe3;
    margin-bottom: 0;
    text-shadow: 0 1px 0 rgba(0,0,0,.1);
    background-color: #6f5499;
    background-repeat: repeat-x;
  }
}

.mug-shot {
  margin: 0 auto;
}

.user-menu {
  border-bottom: 1px solid #ddd;
}

.user-setup-btn {
  & > .dropdown-toggle {
    display: inline-block;
  }
}

.post {
  &.jumbotron {
    text-align: center;
    padding: 10px 0;
  }
  .item-title {
    margin-top: 0;
  }
}
.post-body .new-title{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.post-body p{
  font-size: 18px;
}
.preview-title{
  font-weight: bold;
}
.jumbotron .comment-info{
  padding: 7px;
  margin: 10px 0 0 0;
}
.post-body{
  margin-bottom: 15px;
}
.comment-box{
  padding: 15px 2% 0 2%;
  border-top: 1px solid #ddd;
  .comment-area{
    width: 100%;
    .comment-body{
      margin-bottom: 15px;
      padding: 5px 10px;
      border-radius: 5px;

      .message{
        padding-left: 60px;
        font-size: 14px;
      }
      .name{
        font-weight: bold;
        font-size: 16px;
      }
      .date{
        font-size:12px;
      }
      img {
        border-radius: 50%;
      }
    }
  }
  .form-group {
    margin-bottom: 0px;
  }

}
.comment-number{
  padding: 15px 2% 0 2%;
  border-top: 1px solid #ddd;
  color: #3C3C3C;
  i {
    width:25px;
    height:50px;
  }
  a {
    color: black;
  }
}
.motion{
  background-image: none;
}
.fb-share-button{
  width:50px;
  height:50px;
  margin-bottom: 20px;
}
